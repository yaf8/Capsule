<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_image"
    tools:context=".CreateAccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollForm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/txtCapsule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1E1E1E"
                    android:text="capsule"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:textSize="45sp"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:src="@mipmap/capsule_logo"
                    android:layout_toEndOf="@+id/txtCapsule"
                    android:contentDescription="LOGO"
                    tools:ignore="HardcodedText" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="Hello!"
                android:textColor="#039C8D"
                android:layout_marginTop="40dp"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="Let's get started"
                android:textColor="#047488"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp">

                <EditText
                    android:id="@+id/edtFirstName"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:textColorHint="#3C4040"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="First Name"
                    android:textSize="16sp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

                <EditText
                    android:id="@+id/edtLastName"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/edtFirstName"
                    android:textColorHint="#3C4040"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="LastName"
                    android:textSize="16sp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

            </RelativeLayout>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#3C4040"
                android:background="@drawable/custom_edittext"
                android:hint="Email"
                android:textSize="16sp"
                tools:ignore="Autofill,HardcodedText,TextFields" />


            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#3C4040"
                android:background="@drawable/custom_edittext"
                android:hint="Phone Number"
                android:textSize="16sp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:textColorHint="#3C4040"
                android:hint="Password"
                android:textSize="16sp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:textColorHint="#3C4040"
                android:background="@drawable/custom_edittext"
                android:hint="Confirm Password"
                android:textSize="16sp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCreateAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#135667"
                    android:paddingHorizontal="60dp"
                    android:paddingVertical="15dp"
                    android:text="Create Account"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txtHaveAnAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#323333"
                    android:text="Already have an account?"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/txtSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/txtHaveAnAccount"
                    android:text="SIGN IN"
                    android:textColor="#03242C"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>




        </LinearLayout>
    </ScrollView>
</RelativeLayout>